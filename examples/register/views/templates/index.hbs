{{> header}}

<div class="row">
	<article class="col-lg-8 col-lg-offset-2">
		<div class="jarviswidget jarviswidget-sortable" id="wid-id-0" data-widget-colorbutton="false"
		     data-widget-editbutton="false" role="widget" style="">

			<header role="heading">
				<span class="widget-icon"> <i class="fa fa-edit"></i> </span>

				<h2>Please Enter Information:</h2>

				<span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span></header>

			<!-- widget div-->
			<div role="content">

				<!-- widget edit box -->
				<div class="jarviswidget-editbox">
					<!-- This area used as dropdown edit box -->

				</div>
				<!-- end widget edit box -->

				<!-- widget content -->
				<div class="widget-body">

					<form class="form-horizontal">

						<fieldset>
							<legend>{{gettext "Register"}}</legend>

							<!-- First Name -->
							<div class="form-group">
								<label class="col-md-3 control-label">{{gettext "First Name"}}</label>

								<div class="col-md-9">
									<input class="form-control" placeholder="Default Text Field" type="text">
								</div>
							</div>

							<!-- Last Name -->
							<div class="form-group">
								<label class="col-md-3 control-label">{{gettext "Last Name"}}</label>

								<div class="col-md-9">
									<input class="form-control" placeholder="Default Text Field" type="text">
								</div>
							</div>

							<!-- Email -->
							<div class="form-group">
								<label class="col-md-3 control-label">{{gettext "Email"}}</label>

								<div class="col-md-9">
									<input class="form-control" placeholder="Default Text Field" type="text">
								</div>
							</div>

							<!-- Password -->
							<div class="form-group">
								<label class="col-md-3 control-label">{{gettext "Password"}}</label>

								<div class="col-md-9">
									<input class="form-control" placeholder="Password field" type="password"
									       value="mypassword">
								</div>
							</div>

							<!-- Confirm Password -->
							<div class="form-group">
								<label class="col-md-3 control-label">{{gettext "Confirm Password"}}</label>

								<div class="col-md-9">
									<input class="form-control" placeholder="Password field" type="password"
									       value="mypassword">
								</div>
							</div>

						</fieldset>

						<!-- submit -->
						<div class="form-actions">
							<div class="row">
								<div class="col-md-12">
									<button class="btn btn-primary" type="submit">
										<i class="fa fa-save"></i>
										Register
									</button>
								</div>
							</div>
						</div>

					</form>

				</div>
				<!-- end widget content -->

			</div>
			<!-- end widget div -->

		</div>
	</article>
</div>

{{> footer}}